* 
    padding: 0;
    margin: 0;

.section
    height: 100%;

.section__row
    display: flex;
    height: 100%;

.section__col
    margin: auto;

#full
    height: 100vh;
    overflow: hidden;

.js-full__wrapper
    min-height: 100vh;
    will-change: transform;

#full .js-full__section .section 
    background: #A0522D;
    & h1, h2, h3, h4, h5, h6
        font-family: 'Shrikhand', cursive;
        color: #fff;

.js-full__nav
    position: fixed;
    right: 2%;

.js-full__item
    list-style: none;

.js-full__link
    position: relative;
    display: inline-block;
    width: 6px;
    height: 6px;
    margin: 12px;
    background-color: #fff;
    border-radius: 50%;
    cursor: pointer;

.js-full__link.active::after
    content: "";
    position: absolute;
    top: -4px;
    left: -4px;
    display: block;
    width: 200%;
    height: 200%;
    border: 1px solid #fff;
    border-radius: 50%;